{
  "name": "tiny-ts-cli",
  "version": "1.0.0",
  "description": "A small, customizable cli for typescript projects.",
  "main": "lib/cli.js",
  "types": "lib/cli.d.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cbradshaw205/tiny-ts-cli.git"
  },
  "keywords": [
    "Typescript",
    "Cli",
    "Project",
    "Scripts"
  ],
  "author": "Christian Bradshaw",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cbradshaw205/tiny-ts-cli/issues"
  },
  "homepage": "https://github.com/cbradshaw205/tiny-ts-cli#readme",
  "devDependencies": {
    "@types/node": "^18.11.9",
    "prettier": "^2.7.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "commander": "^9.4.1"
  },
  "type": "module"
}
