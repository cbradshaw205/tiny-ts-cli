{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "es2022",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2022",
    "types": ["node"],
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}