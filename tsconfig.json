{
  "compilerOptions": {
    "lib": ["es2020"],
    "removeComments": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "strict": false,    
    "target": "es2019",
    "outDir": "lib",
    "typeRoots": ["./node_modules/@types"],
  },
  "include": ["**/*.ts", "src/core/logger.ts"],
  "exclude": ["node_modules/**/*"],

}
